@model TennesseeStockings.Models.Stock

<form asp-action="Edit" asp-area="Stockings" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Stream:</label>
                <input asp-for="Stream" type="text" class="form-control required" placeholder="Enter stream"
                    tabindex="1">
            </div>
            <div class="form-group">
                <label>Stocking:</label>
                <input asp-for="Stocking" type="text" class="form-control required" placeholder="Enter stocking"
                    tabindex="2">
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-warning">Update Stocking</button>
                    <a asp-action="Index" asp-controller="Stockings" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>